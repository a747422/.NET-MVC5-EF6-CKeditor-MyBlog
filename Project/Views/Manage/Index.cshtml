@model Project.Models.ManageListModel
@{
    ViewBag.Title = "管理";
}
<link href="~/Content/Manage.css" rel="stylesheet" />

<div class="row-fluid">
    <!-- block -->
    <div class="block">
        <div class="navbar navbar-inner block-header">
            <div class="muted pull-left">文章管理</div>
        </div>
        <div class="block-content collapse in">
            <div class="span12">
                <div class="table-toolbar">
                    <div class="btn-group" style="padding-bottom:10px">
                        <a href="@Url.Action("EditArticle")">
                            <button class="btn btn-success">+新建文章 <i class="icon-plus icon-white"></i></button>
                        </a>
                    </div>
                </div>

                <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example2">
                    <thead>
                        <tr>
                            <th>文章ID</th>
                            <th>文章分类</th>
                            <th>文章封面</th>
                            <th>文章名</th>
                            <th>文章发布时间</th>
                            <th>文章模式(0:隐藏 1:公开)</th>
                            <th>文章点击量</th>
                            <th>发布用户</th>
                            <th>管理 </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ArtcleList)
                        {
                            <tr class="odd gradeX">
                                <td>@Html.DisplayFor(m => item.ArticleId) </td>
                                <td>@Html.DisplayFor(m => item.SortArticleName)  </td>
                                <td><img src=@Html.DisplayFor(m=>item.ArticleCover) style="width:100px" /></td>
                                <td class="center"> @Html.DisplayFor(m => item.ArticleName) </td>
                                <td class="center">@Html.DisplayFor(m => item.ArticleTime) </td>
                                <td class="center"> @Html.DisplayFor(m => item.ArticleType) </td>
                                <td class="center">@Html.DisplayFor(m => item.ArticleClick) </td>
                                <td class="center">@Html.DisplayFor(m => item.UserId) </td>
                                <td>
                                    @using (Ajax.BeginForm("DeteleArticle", new { id = item.ArticleId },new AjaxOptions
                                    {
                                        InsertionMode = InsertionMode.ReplaceWith,
                                        HttpMethod = "Post",
                                        OnFailure = "NoneFailed",
                                        Confirm = "是否确认删除？"
                                    }))
                                    {
                                        <input type="submit" name="name" id=""  class="btn-default" value="删除">                                        
                                    }
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mrcTableContent" id="mrcTableContent">

                </div>
            </div>
        </div>
    </div>
    <!-- /block -->
</div>

<div class="row-fluid">
    <!-- block -->
    <div class="block">
        <div class="navbar navbar-inner block-header">
            <div class="muted pull-left">壁纸&句子管理</div>
        </div>
        <div class="block-content collapse in">
            <div class="span12">
                <div class="table-toolbar">
                    <div class="btn-group" style="padding-bottom:10px">
                        <a href=@Url.Action("EditBackImage")>
                            <button class="btn btn-success">+新建壁纸&句子<i class="icon-plus icon-white"></i></button>
                        </a>
                    </div>

                </div>

                <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example2">
                    <thead>
                        <tr>
                            <th>ID </th>
                            <th>壁纸</th>
                            <th>句子 </th>
                            <th>发布时间 </th>
                            <th>发布用户 </th>
                            <th>管理 </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.BackImage)
                        {
                            <tr class="odd gradeX">
                                <td>@Html.DisplayFor(m => item.BackImgId)</td>
                                <td>
                                    <img src=@Html.DisplayFor(m=>item.BackImg) style="width:100px" />
                                </td>
                                <td>@Html.DisplayFor(m => item.BackImgSentence)</td>
                                <td class="center">@Html.DisplayFor(m => item.BackTime)</td>
                                <td class="center">@Html.DisplayFor(m => item.UserId)</td>
                                <td>
                                    @using (Ajax.BeginForm("DeteleBackImage", new { id = item.BackImgId }, new AjaxOptions
                                        {
                                            InsertionMode = InsertionMode.ReplaceWith,
                                            HttpMethod = "Post",
                                            OnFailure = "NoneFailed",
                                            Confirm = "是否确认删除？"
                                    }))
                                    {
                                        <input type="submit" name="name" id="" class="btn-default" value="删除">
                                    }
                             
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /block -->
</div>
